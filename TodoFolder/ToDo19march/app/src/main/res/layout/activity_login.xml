<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imagelogin"
                android:layout_width="@dimen/dimen_110dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_marginLeft="@dimen/dimen_120dp"
                android:background="@drawable/login" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextEmaillogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_weight="1.17"
                android:background="@drawable/roundbutton"
                android:hint="Email"
                android:padding="@dimen/dimen_10dp"
                android:textColor="#000000"
                android:textColorHint="#FF4081" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextPasswordlogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@drawable/roundbutton"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/dimen_10dp"
                android:textColor="#000000"
                android:textColorHint="#FF4081" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textviewforgotpwdlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="@string/forgot_pwd"
                android:textColor="#FF4081"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_120dp"
                android:background="@drawable/roundbutton"
                android:padding="@dimen/dimen_10dp"
                android:text="Login in "
                android:textColor="#FF4081"
                android:textSize="@dimen/dimen_20dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/roundbutton"
                android:text="Create_account"
                android:textSize="@dimen/dimen_20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/roundbuttonfb"
                    android:text="Login via f"
                    android:textColor="#ffff"
                    android:textSize="@dimen/dimen_20dp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="11dp"
                    android:layout_weight="0.5"

                    android:background="@drawable/roundbuttongoogle"
                    android:text="sign via G+"
                    android:textColor="#ffff"
                    android:textSize="@dimen/dimen_20dp" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>

