<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C0C0C0"
    android:orientation="vertical"
    android:tag="cards main container"
    tools:context=".todohome.ui.TodoHomeActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:transitionName="cardview"
        android:paddingRight="@dimen/dimen_10dp"
        card_view:cardBackgroundColor="#FFFF"
        card_view:cardCornerRadius="@dimen/dimen_5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/dimen_5dp"
        android:elevation="@dimen/dimen_5dp"
        >

        <LinearLayout
            android:id="@+id/linearlayoutcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textviewcard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="@dimen/dimen_20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/card_discriptiomn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textColor="#000"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/dimen_20dp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/reminderdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="@dimen/dimen_10dp"
                android:alpha="0.37"
                android:background="#d3d3d3"
                android:paddingStart="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_2dp"
                android:paddingBottom="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

