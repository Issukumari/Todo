<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="cards main container"
    android:id="@+id/relative"
    android:orientation="vertical"
    tools:context=".ui.TodoHomeActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_5dp"
        card_view:cardBackgroundColor="#A52A2A"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_130dp"
        card_view:cardCornerRadius="@dimen/dimen_10dp"
        card_view:cardUseCompatPadding="true"
       >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textviewcard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:textSize="@dimen/dimen_20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/card_discriptiomn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:textSize="@dimen/dimen_20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
</LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>

