<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fundoohr.com.intentextra.MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center|top"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:text="Activityone"
        android:textColor="#000000"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:layout_below="@id/textview1"
        android:text="Select background color"
        android:textColor="#000000"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/textview"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:layout_below="@id/textview2"
        android:text="Result"
        android:textColor="#000000"
        android:textSize="18dp"/>


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/btn1"
    android:onClick="redBackground"
    android:layout_marginLeft="30dp"
    android:background="#ff0000"
    android:text="Red"
    android:textColor="#000000"
    android:layout_below="@+id/textview"
    android:layout_alignStart="@+id/textview1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:layout_gravity="center"
        android:onClick="blueBackground"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="#0000ff"
        android:layout_below="@id/btn1"
        android:text="blue"
        android:textColor="#000000"/>
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btn3"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:onClick="greenBackground"
        android:background="#00ff00"
        android:layout_below="@id/btn2"
        android:text="green"
        android:textColor="#000000"/>
</RelativeLayout>
