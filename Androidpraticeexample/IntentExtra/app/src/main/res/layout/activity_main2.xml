<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#00ff00"
    android:id="@+id/layout"
    tools:context="fundoohr.com.intentextra.Main2Activity">

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center|top"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:text="Activitytwo"
        android:textColor="#000000"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:text="Select background color"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/textview3"
        android:layout_alignStart="@+id/textview3" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:layout_above="@+id/openActivityone"
        android:layout_alignStart="@+id/editText1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/openActivityone"
        android:layout_marginLeft="50dp"
        android:background="#858585"
        android:text="select color"
        android:onClick="openActivityone"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_above="@+id/add"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ADD"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="add" />


    <Button
        android:id="@+id/bSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/add"
        android:onClick="SUB"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="sub"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mul"
        android:id="@+id/mul"
        android:onClick="Mul"

        android:layout_below="@+id/bSub"
        android:layout_alignStart="@+id/bSub" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="div"
        android:onClick="Div"
        android:textSize="20dp"
        android:id="@+id/div"
        android:layout_below="@+id/mul"
        android:layout_alignStart="@+id/mul" />


</RelativeLayout>
