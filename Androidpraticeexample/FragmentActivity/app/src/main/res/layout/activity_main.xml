<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/nameeditmain"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonsave"
        android:layout_below="@+id/nameeditmain"
        android:layout_alignStart="@+id/nameeditmain"
        android:layout_marginStart="74dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Openfragment"
        android:id="@+id/Openfragment"
        android:layout_below="@+id/buttonsave"
        android:layout_alignStart="@+id/nameeditmain"
        android:layout_marginStart="74dp"/>



        <fragment
            android:layout_width="236dp"
            android:layout_height="294dp"
            android:id="@+id/fragment34"
            class="layout.Fragment1"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/Openfragment"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
        />




</RelativeLayout>
