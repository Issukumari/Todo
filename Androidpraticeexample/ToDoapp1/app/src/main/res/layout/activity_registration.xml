<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smi"
    android:padding="16dp"
    tools:context=".RegisterActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:text="Registration"
        android:textColor="#303F9F"
        android:textSize="30dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editTextName_Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt6"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_edittext"
        android:gravity="center_vertical"
        android:hint="Full Name"
        android:padding="@dimen/dimen_5dp"
        android:textColorHint="#ff00"
        android:textSize="20dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editTextEmail_Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextName_Register"
        android:layout_margin="5dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/border_edittext"
        android:gravity="center_vertical"
        android:hint="Email"
        android:padding="@dimen/dimen_5dp"
        android:textColorHint="#ff00"
        android:textSize="20dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editTextPwd_Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/editTextEmail_Register"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_edittext"
        android:gravity="center_vertical"
        android:hint="Password"
        android:padding="@dimen/dimen_5dp"
        android:textColorHint="#ff00"
        android:textSize="20dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editTextMobile_Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/txt6"
        android:layout_alignTop="@+id/edit7"
        android:background="@drawable/border_edittext"
        android:gravity="center_vertical"
        android:hint="Mobile"
        android:padding="@dimen/dimen_5dp"
        android:textColorHint="#ff00"
        android:textSize="20dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextPwd_Register"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_edittext"
        android:hint="+91"
        android:padding="@dimen/dimen_5dp"
        android:textColorHint="#ff00"
        android:textSize="20dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editTextAddress_Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/edit7"
        android:padding="@dimen/dimen_5dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_edittext"
        android:hint="Address"
        android:textColorHint="#ff00"
        android:textSize="20dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/editTextButton_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5dp"
        android:layout_below="@+id/editTextAddress_Register"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/border_edittext"
        android:text="save"
        android:textSize="20dp" />


</RelativeLayout>
