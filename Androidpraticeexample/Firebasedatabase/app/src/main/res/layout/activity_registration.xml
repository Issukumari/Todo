<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:padding="16dp"
    tools:context="bridgelabz.app.com.firebasedatabase.RegisterationActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/rregimage"
                android:layout_width="@dimen/dimen_110dp"
                android:layout_height="@dimen/dimen_90dp"
                android:layout_marginLeft="@dimen/dimen_120dp"
                android:background="@drawable/login" />


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextName_Registeration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_below="@+id/rregimage"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/roundbutton"
                android:gravity="center_vertical"
                android:hint="Full Name"
                android:padding="@dimen/dimen_5dp"
                android:textColorHint="#ff00"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextEmail_Registeration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextName_Registeration"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:background="@drawable/roundbutton"
                android:gravity="center_vertical"
                android:hint="Email"
                android:padding="@dimen/dimen_5dp"
                android:textColorHint="#ff00"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextPwd_Registeration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_below="@+id/editTextEmail_Registeration"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/roundbutton"
                android:gravity="center_vertical"
                android:hint="Password"
                android:padding="@dimen/dimen_5dp"
                android:textColorHint="#ff00"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextMobile_Registeration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignStart="@+id/rregimage"
                android:layout_alignTop="@+id/TextviewMobileno_Registeration"
                android:background="@drawable/roundbutton"
                android:gravity="center_vertical"
                android:hint="Mobile"
                android:padding="@dimen/dimen_5dp"
                android:textColorHint="#ff00"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/TextviewMobileno_Registeration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextPwd_Registeration"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/roundbutton"
                android:hint="+91"
                android:padding="@dimen/dimen_5dp"
                android:textColorHint="#ff00"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextAddress_Registeration"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/TextviewMobileno_Registeration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/roundbutton"
                android:gravity="center_vertical"
                android:hint="Address"
                android:padding="@dimen/dimen_5dp"
                android:textColorHint="#ff00"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/SaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextAddress_Registeration"
                android:layout_marginBottom="45dp"
                android:layout_marginLeft="@dimen/dimen_120dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/roundbutton"
                android:text="save"
                android:textColor="#ff00"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/AlreadyAccountButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/SaveButton"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:background="@drawable/roundbutton"
                android:text="Already an account?sign in"
                android:textColor="#ff00"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
