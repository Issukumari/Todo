<RelativeLayout 
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/layout_root"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
>

   <RelativeLayout 
      android:id="@+id/main_bottom_panel"
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_centerHorizontal="true"
      android:gravity="center_vertical"
      android:background="@drawable/btm_pixel" android:tileMode="repeat"
   >
      <ImageView 
         android:id="@+id/xon_logo_icon" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:src="@drawable/xon_main_logo_40"
         android:padding="10dip"
         android:contentDescription="@string/Logo"
      />
   </RelativeLayout>   
    
	<RelativeLayout 
	  android:id="@+id/main_center_panel"
      android:layout_above="@id/main_bottom_panel"
      android:layout_alignParentLeft="true"
      android:orientation="horizontal"
      android:layout_height="match_parent"
      android:layout_width="match_parent"      
	   android:background="@drawable/pixel_gradient" android:tileMode="repeat"
	>	    	    
	   <RelativeLayout 
	      android:id="@+id/main_top_panel"
	      android:orientation="horizontal"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:layout_alignParentTop="true"
	      android:layout_alignParentLeft="true"
	      android:layout_centerHorizontal="true"
	      android:gravity="center_vertical"
	   >
	      <Button
	         android:id="@+id/xon_about_btn" 
	         style="@style/XONButton"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignParentRight="true"
	         android:padding="5dip"
	         android:layout_centerVertical="true"
	         android:drawableTop="@drawable/about_xon"
	         android:text="@string/about"
	         tools:context=".XON_Main_UI"       
	      />
	   </RelativeLayout>   
	   <RelativeLayout 
         android:id="@+id/btm_center_panel" 
         android:layout_alignParentBottom="true"
         android:orientation="horizontal"
         android:layout_height="125dip"
         android:layout_width="wrap_content"      
         android:layout_centerHorizontal="true"
         android:padding="10dip"
         android:layout_marginBottom="20dip"
      >            
         <Button
            android:id="@+id/gallery_btn" 
            style="@style/XONButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:padding="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:drawableTop="@drawable/gallery"
            android:text="@string/gallery"
            tools:context=".XON_Main_UI"       
         />
         <Button
            android:id="@+id/camera_btn" 
            style="@style/XONButton"
            android:layout_toRightOf="@id/gallery_btn"
            android:layout_alignParentBottom="true"
            android:padding="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="30dip"
            android:drawableTop="@drawable/camera"
            android:text="@string/camera"
            tools:context=".XON_Main_UI" 
         />
         <Button
            android:id="@+id/myXON_btn" 
            style="@style/XONButton"
            android:layout_toRightOf="@id/camera_btn"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:padding="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:drawableTop="@drawable/my_gallery"
            android:text="@string/myXON"
            tools:context=".XON_Main_UI" 
         />
      </RelativeLayout>
      	   
      <RelativeLayout 
         android:id="@+id/start_txt_panel"
         android:layout_above="@id/btm_center_panel"
         android:orientation="horizontal"
         android:layout_width="match_parent"      
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:gravity="center_vertical"
      >
		   <TextView 
	        android:id="@+id/main_start_txt"
           android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/start_here"
	        android:gravity="center_horizontal"
	        android:textSize="@dimen/font_large"
	        android:textColor="@color/dark_green"
	        android:textStyle="italic"      
	        android:layout_marginTop="20dip"
	      />
      </RelativeLayout>
		   	   
  	   <!-- The FrameLayout control is used to hold the custom View that will draw an image. -->
	   <FrameLayout
         android:layout_above="@id/start_txt_panel"
	      android:layout_below="@id/main_top_panel"
	      android:id="@+id/main_dislay_view"
	      android:layout_height="match_parent"
	      android:layout_width="match_parent"
         style="@style/XONLogoBackground"
      >      
	      <ProgressBar
	         android:id="@+id/progress_bar"
	         style="?android:attr/progressBarStyleLarge"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:visibility="invisible"
	         android:layout_gravity="center" />
	   </FrameLayout>
	
	</RelativeLayout>

</RelativeLayout>