<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme" />

    <style name="AppTheme.FullScreen" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_list_selector</item>
    </style>
    <style name="XONFullViewTitleBackground">
        <item name="android:background">#FFFF66</item>
    </style>
    <style name="XONTitleBackground">
        <item name="android:background">#838383</item>
    </style>
    <style name="XONSubTitleBackground">
        <item name="android:background">#C8C8C8</item>
    </style>
    <style name="XONBodyBackground">
        <!--  <item name="android:background">#CC99FF</item> -->
        <item name="android:background">#FFFF66</item>
    </style>
    <style name="XONLogoBackground">
        <!--  <item name="android:background">#CC99FF</item> -->
        <item name="android:background">#222222</item>
    </style>
    <style name="XONInnerBodyBackground">
        <item name="android:background">@drawable/repeat_inner_bg</item>
    </style>
    <style name="XONHomeSelBackground">
        <item name="android:background">#CC66FF</item>
    </style>
    <style name="XONTransperantBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="XONHomeBtnBackground">
        <item name="android:background">#FFFF66</item>
    </style>

    <style name="XONTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:textSize" >10dip</item>
        <item name="android:textStyle" >bold</item>
    </style>
    <style name="XONButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:textSize" >10dip</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:focusable" >true</item>
        <item name="android:clickable" >true</item>
        <item name="android:background" >@android:color/transparent</item>
    </style>
    <style name="XONTopButton" parent="XONButton">
        <item name="android:textColor" >#000000</item>
    </style>
    <style name="XONHomeButton" parent="XONButton">
        <item name="android:background" >#222222</item>
        <item name="android:textColor" >#ffffff</item>
    </style>
    <style name="XONMenuButton" parent="XONButton">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:padding" >4dip</item>
        <item name="android:layout_marginLeft" >6dip</item>
    </style>
    <style name="XONHomeMenuButton" parent="XONButton">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:paddingTop" >4dip</item>
        <item name="android:paddingLeft" >7dip</item>
        <item name="android:paddingRight" >6dip</item>
    </style>
